# Android studio
export ANDROID_HOME=$HOME/Library/Android/sdk
export ANDROID_SDK_ROOT=$ANDROID_HOME
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
alias android_emulator="$ANDROID_HOME/tools/emulator @Pixel_API_26 &"
# Npm
NPM_PACKAGES="${HOME}/.npm-packages"
export PATH="$NPM_PACKAGES/bin:$PATH"
export MANPATH="$NPM_PACKAGES/share/man:$(manpath)"
# Cabal and Haskell 
export PATH=$PATH:$HOME/.config/composer/vendor/bin
export PATH=$PATH:~/.cabal/bin
export PATH=$PATH:~/.local/bin
# Neovim
export VISUAL=nvim
export EDITOR="$VISUAL"
alias lvim="/usr/bin/vim"
alias vim="nvim"
# Yarn
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"
# Zsh completion
source ~/.config/tmuxinator/completion/zsh
# Gradle
export GRADLE_HOME=$HOME/.gradle/wrapper/dists/gradle-5.4.1-bin/e75iq110yv9r9wt1a6619x2xm/gradle-5.4.1
